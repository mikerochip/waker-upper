{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "Wakes yo ass up!",

  "Globals": {
    "Function": {
      "Runtime": "dotnetcore3.1",
      "MemorySize": 512,
      "Timeout": 30,
      "Tracing": "PassThrough",
      "CodeUri": "bin/Release/netcoreapp3.1/publish",
      "AutoPublishAlias": "Live",
      "DeploymentPreference": {
        "Type": "AllAtOnce"
      },
      "Environment": {
        "Variables": {
          "AspKeysParameter": "/WakerUpper/AspKeys",
          "PhoneNumberOptionsParameterPath": "/WakerUpper/PhoneNumberOptions",
          "TargetPhoneNumberParameter": { "Fn::ImportValue": "WakerUpper-TargetPhoneNumberParameter-Name" },
          "MessageParameter": { "Fn::ImportValue": "WakerUpper-MessageParameter-Name" }
        }
      }
    }
  },

  "Resources": {
    "AspNetCoreFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "WakerUpper.Asp::WakerUpper.Asp.LambdaAspEntryPoint::FunctionHandlerAsync",
        "Policies": [
          "AWSLambdaFullAccess",
          "AmazonSSMFullAccess",
          "CloudWatchEventsFullAccess"
        ],
        "Environment": {
          "Variables": {
            "SendEventRuleName": { "Ref": "SendSmsScheduledCall" }
          }
        },
        "Events": {
          "ProxyResource": {
            "Type": "Api",
            "Properties": {
              "Path": "/{proxy+}",
              "Method": "ANY"
            }
          },
          "RootResource": {
            "Type": "Api",
            "Properties": {
              "Path": "/",
              "Method": "ANY"
            }
          }
        }
      }
    },
    "AspNetCoreFunctionLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": { "Fn::Sub": "/aws/lambda/${AspNetCoreFunction}" },
        "RetentionInDays": 1
      }
    }
  }
}
