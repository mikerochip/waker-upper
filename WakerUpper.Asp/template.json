{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "ASP app for the thing that wakes yo ass up!",

  "Parameters": {
    "DomainZoneId": {
      "Type": "String"
    },
    "DomainName": {
      "Type": "String"
    },
    "DomainCertificateArn": {
      "Type": "String"
    },
    "TargetPhoneNumberParameter": {
      "Type": "AWS::SSM::Parameter::Name"
    },
    "MessageParameter": {
      "Type": "AWS::SSM::Parameter::Name"
    }
  },

  "Globals": {
    "Api": {
      "OpenApiVersion": "3.0.1",
      "EndpointConfiguration": "REGIONAL",
      "Domain": {
        "CertificateArn": { "Ref": "DomainCertificateArn" },
        "DomainName": { "Ref": "DomainName" },
        "Route53": {
          "HostedZoneId": { "Ref": "DomainZoneId" }
        },
        "EndpointConfiguration": "REGIONAL",
        "BasePath": [ "/app" ]
      }
    },
    "Function": {
      "Runtime": "dotnetcore3.1",
      "MemorySize": 512,
      "Timeout": 30,
      "Tracing": "PassThrough",
      "CodeUri": "bin/Release/netcoreapp3.1/publish",
      "AutoPublishAlias": "Live",
      "DeploymentPreference": {
        "Type": "AllAtOnce"
      },
      "Environment": {
        "Variables": {
          "AspKeysParameter": "/WakerUpper/AspKeys",
          "PhoneNumberOptionsParameterPath": "/WakerUpper/PhoneNumberOptions",
          "TargetPhoneNumberParameter": { "Ref": "TargetPhoneNumberParameter" },
          "MessageParameter": { "Ref": "MessageParameter" }
        }
      }
    }
  },

  "Resources": {
    "AspNetCoreFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "WakerUpper.Asp::WakerUpper.Asp.LambdaAspEntryPoint::FunctionHandlerAsync",
        "Policies": [
          "AWSLambdaFullAccess",
          "AmazonSSMFullAccess",
          "CloudWatchEventsFullAccess"
        ],
        "Environment": {
          "Variables": {
            "SendEventRuleName": { "Fn::ImportValue": "WakerUpper-SendEventRule-Id" }
          }
        },
        "Events": {
          "ProxyResource": {
            "Type": "Api",
            "Properties": {
              "Path": "/{proxy+}",
              "Method": "ANY"
            }
          },
          "RootResource": {
            "Type": "Api",
            "Properties": {
              "Path": "/",
              "Method": "ANY"
            }
          }
        }
      }
    },
    "AspNetCoreFunctionLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": { "Fn::Sub": "/aws/lambda/${AspNetCoreFunction}" },
        "RetentionInDays": 1
      }
    }
  }
}
